.search_input {
  border-radius:150rpx;
  background-color: var(--color_grey_dd);
  width: 100%;
  height: 60rpx;
  z-index: 1;
  margin-left: 5%;
  margin-right: 5%;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  padding: 10rpx;
  font-size: 30rpx;
  
}
.search_container {
  display: flex;
  height: auto;
  flex-direction: row;
  align-items: center;
  width: 100%;
}
.image_search {
  position: absolute;
  right: 10%;
  z-index: 2;
  top: 45rpx;
  width: 30rpx;
  height: 30rpx;
}
