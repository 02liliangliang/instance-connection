/* pages/shoucang/shoucang.wxss */
.content_body{
  margin: 5rpx;
  background: #faf9f6;
  width: 95%;
  margin-left: 15rpx;
  display: flex;
  align-items: center;
  height: 180rpx;
  border-radius: 20rpx;
}
.content_time{
  height: 180rpx;
  width: 110rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-right:2px solid #ebe9e9 ;
}
.redact_month{
  font-size: small;
}
.redact_day{
  font-size: x-large;
}
.content_main{
  height: 180rpx;
  width: 82%;
  display: flex;
  flex-direction:column;
  justify-content: center;
}
.content_title{
  display: flex;
  align-items: center;
  height: 90rpx;
  padding: 15rpx;
  font-size: larger;
}
.content_state{
  font-size: x-small;
  height: 80rpx;
  padding:0rpx 10rpx 10rpx 15rpx;
  display: flex;
  justify-content:space-between;
  align-items: center;
}

